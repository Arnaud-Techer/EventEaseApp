@page "/login"
@using EventEaseApp.Models
@inject NavigationManager NavigationManager
@inject EventEaseApp.Services.UserSessionService UserSessionService

<h3 class="mb-4">Login to Your Account</h3>

<EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator/>
    <ValidationSummary/>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <InputText id="email" class="form-control" @bind-Value="loginModel.Email"/>
        <ValidationMessage For="@(() => loginModel.Email)" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="loginModel.Password" />
        <ValidationMessage For="@(() => loginModel.Password)" />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

</EditForm>

@if (loginError != null)
{
    <div class="alert alert-danger mt-3">@loginError</div>
}

@code{
    private LoginModel loginModel = new();
    private string? loginError;

    private async Task HandleLogin()
    {
        if (loginModel.Email =="admin@example.com" && loginModel.Password =="password")
        {
            loginError = null;
            await UserSessionService.LoginAsync("Admin User",null);
            NavigationManager.NavigateTo("/events");
        }
        else
        {
            loginError = "Invalid email or password";
        }
    }
}