<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EventEaseApp</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/events">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Events
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Calendar
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="maps">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Event Maps
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" @onclick="ToggleUserMenu">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> User
                <span class="float-end bi @(showUserMenu ? "bi-chevron-up" : "bi-chevron-down")"></span>
            </NavLink>
        </div>
        @if (showUserMenu)
        {
            @if (isLoggedIn)
            {
                <div class="nav-item ps-4">
                    <NavLink class="nav-link" href="profile">
                        <span class="bi bi-person" aria-hidden="true"></span> My Profile
                    </NavLink>
                </div>
                <div class="nav-item ps-4">
                    <NavLink class="nav-link" href="" @onclick="Logout">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                    </NavLink>
                </div>
            }
            else
            {
                <div class="nav-item ps-4">
                    <NavLink class="nav-link" href="register">
                        <span class="bi bi-pencil-square" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item ps-4">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            }
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="options">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Options
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool showUserMenu = false;
    private bool isLoggedIn = false;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    
    private void ToggleUserMenu()
    {
        showUserMenu = !showUserMenu;
    }

    protected override void OnInitialized()
    {
        isLoggedIn = false;
    }

    private void Logout()
    {
        isLoggedIn = false;
        showUserMenu = false;
    }
}
